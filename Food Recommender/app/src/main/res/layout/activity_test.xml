                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/dinnerMealImage"
                android:layout_below="@+id/dinnerMealName"
                android:maxWidth="195dp"
                android:maxLines="5"
                android:text="sdjhfhdsfhsdfjhsdfjhsdjhfsdjhfjkhfdkgjhdfkjghdjkfshgjdshfghdfgjhdjfghjdfhgjdhsfkgjhdksfjgh
dfgklnsdflgksdlfkgjlksdfglksdfhglkhdsflghsdlfhgsldfgsfdglkjdsf"
                android:id="@+id/dinnerMealDescribtion"
                tools:ignore="HardcodedText" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dinnerMealDescribtion"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="40dp"
                android:textStyle="bold"
                android:text="Calories : 500"
                android:id="@+id/dinnerMealCalories"/>
            <ImageView
                android:id="@+id/changeDinner"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="70dp"
                android:layout_marginRight="16dp"

                app:srcCompat="@drawable/repeat" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>
</ScrollView>













