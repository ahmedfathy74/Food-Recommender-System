                android:layout_alignParentEnd="true"
                android:layout_marginTop="70dp"
                android:layout_marginRight="16dp"

                app:srcCompat="@drawable/repeat" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/dinnerIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/lunchCV"

        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/lunchTV"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/dinner" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dinnerTV"
        android:text="Dinner"
        android:layout_below="@+id/lunchCV"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:textSize="24sp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dinnerCV"
        android:layout_below="@+id/dinnerTV"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#fff4d4"
        android:layout_margin="16dp"
        app:cardElevation="15dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginLeft="8dp"
