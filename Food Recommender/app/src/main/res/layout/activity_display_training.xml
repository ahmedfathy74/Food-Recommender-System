<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".DisplayTraining">

    <ImageView
        android:id="@+id/TrainingImage"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:src="@drawable/qq"
        app:layout_constraintBottom_toTopOf="@id/TrainingName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    
    <TextView
        android:id="@+id/TrainingName"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Name: "
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_below="@+id/TrainingImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"

        />

    <TextView
        android:id="@+id/TrainingDuration"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Duration: "
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_below="@+id/TrainingName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/TrainingImage"
        />

    <ImageView
        android:id="@+id/prev"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/ic_arrow_back_black_24dp"
        android:layout_marginLeft="100dp"
        android:layout_below="@+id/TrainingDuration"/>
    <ImageView
        android:id="@+id/nex"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/ic_baseline_arrow_forward_24"
        android:layout_marginLeft="150dp"
        android:layout_alignLeft="@+id/prev"
        android:layout_below="@+id/TrainingDuration"
        />


</RelativeLayout>