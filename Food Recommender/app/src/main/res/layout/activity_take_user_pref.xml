<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".takeUserPref"
    android:background="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/wqw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="please select your favorite category"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textSize="20dp">
        </TextView>
        <RadioGroup
            android:id="@+id/prefGroup"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >
            <RelativeLayout
                android:id="@+id/rev"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
            <RadioButton
                android:id="@+id/meat"
                android:layout_margin="20dp"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/meat"
                android:layout_gravity="center"
                android:button="@drawable/roundedbttn"
                />
            <RadioButton
                android:id="@+id/chicken"
                android:layout_margin="20dp"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/chicken"
                android:layout_gravity="center"
                android:button="@drawable/roundedbttn"
                android:layout_toRightOf="@+id/meat"/>
                <RadioButton
                    android:id="@+id/fish"
                    android:layout_margin="20dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/steamedfish"
                    android:layout_gravity="center"
                    android:button="@drawable/roundedbttn"
                    android:layout_below="@+id/meat"/>
                <RadioButton
                    android:id="@+id/dairy"
                    android:layout_margin="20dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/wheyprotein"
                    android:layout_gravity="center"
                    android:button="@drawable/roundedbttn"
                    android:layout_toRightOf="@+id/fish"
                    android:layout_below="@+id/chicken"/>
                <RadioButton
                    android:id="@+id/fruit"
                    android:layout_margin="20dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/food"
                    android:layout_gravity="center"
                    android:button="@drawable/roundedbttn"
                    android:layout_below="@+id/fish"/>

                <RadioButton
                    android:id="@+id/vegetables"
                    android:layout_margin="20dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/diet"
                    android:layout_gravity="center"
                    android:button="@drawable/roundedbttn"
                    android:layout_toRightOf="@+id/fruit"
                    android:layout_below="@+id/dairy"/>
            </RelativeLayout>
        </RadioGroup>
        <Button
            android:id="@+id/Next3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textStyle="italic"
            android:gravity="center"
            android:textSize="22sp"
            android:textColor="#FFFFFF"
            android:paddingHorizontal="32dp"
            android:layout_margin="20dp"
            android:text="Next"
            android:background="@drawable/roundedbttn"
            android:drawableRight="@drawable/ic_arrow_forward_black_24dp"/>
    </LinearLayout>


</ScrollView>